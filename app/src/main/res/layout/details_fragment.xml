<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.details.DetailsActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/card_showlight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/detailscards_left_right"
        android:layout_marginRight="@dimen/detailscards_left_right"
        android:layout_marginBottom="@dimen/tiny_margin"
        android:layout_marginTop="@dimen/small_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/details_poster"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                tools:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/details_title"
                style="@android:style/TextAppearance.Large"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/details_poster"
                android:layout_toRightOf="@+id/details_poster"
                android:fontFamily="@font/roboto"
                android:maxLines="2"
                android:ellipsize="end"
                android:paddingLeft="@dimen/small_margin"
                android:paddingTop="@dimen/small_margin"
                tools:text="TITLE"/>

            <RatingBar
                android:id="@+id/details_ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details_title"
                android:layout_toRightOf="@+id/details_poster"
                style="?android:attr/ratingBarStyleSmall"
                android:isIndicator="false"
                android:numStars="10"/>

            <TextView
                android:id="@+id/details_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_toRightOf="@+id/details_poster"
                android:layout_below="@+id/details_ratingbar"
                android:fontFamily="@font/roboto"
                android:textSize="@dimen/large_font_size"
                tools:text="tmdb rating: 9.8"/>

            <TextView
                android:id="@+id/text_movie_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/image_movie_detail_poster"
                android:layout_marginBottom="@dimen/small_margin"
                android:layout_toEndOf="@+id/image_movie_detail_poster"
                android:layout_toRightOf="@+id/details_poster"
                android:paddingEnd="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingStart="8dp"
                tools:text="Release date: 08.10.2015"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_showlight"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/detailscards_left_right"
        android:layout_marginRight="@dimen/detailscards_left_right"
        android:layout_marginBottom="@dimen/tiny_margin"
        android:layout_marginTop="@dimen/tiny_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_margin">

            <TextView
                android:id="@+id/text_movie_overview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_overview"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_movie_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_movie_overview_title"
                android:paddingTop="@dimen/small_margin"
                tools:text="A plot synopsis (called overview in the api)"/>


            <TextView
                android:id="@+id/text_videos_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_videos"
                android:textStyle="bold"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/movie_videos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_videos_title"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingTop="@dimen/small_margin"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>

            <TextView
                android:id="@+id/text_reviews_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_reviews"
                android:textStyle="bold"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/movie_reviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_reviews_title"
                android:paddingTop="@dimen/small_margin"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>